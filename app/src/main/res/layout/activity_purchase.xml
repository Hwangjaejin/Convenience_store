<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    tools:context=".PurchaseActivity">


    <TextView
        android:id="@+id/count_item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/product_name"
        android:layout_marginTop="144dp"
        android:text="몇 개 살 건가요?"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="163dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:text="물건이름"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/product_price"
        android:layout_width="127dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/product_name"
        android:layout_marginEnd="28dp"
        android:text="물건가격"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/count_item"
        android:layout_centerVertical="true"
        android:text="도착시간"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_count"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/count_item"
        android:layout_alignStart="@+id/product_price"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edit_arriveTime"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_toEndOf="@+id/count_item"
        android:ems="10"
        android:inputType="number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/count_item"
        android:layout_toEndOf="@+id/textView8"
        android:text="개"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_count"
        android:layout_alignTop="@+id/textView5"
        android:text="시"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="예약" />

    <TextView
        android:id="@+id/totalcost"
        android:layout_width="253dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:text="총금액"
        android:textSize="20dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/count_item"
        android:layout_marginTop="86dp"
        android:text="내 포인트"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/product_price"
        android:layout_alignTop="@+id/textView10"
        android:text="TextView"
        android:textSize="20dp" />
</RelativeLayout>